{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Task is completed event",
    "type": "object",
    "properties": {
        "event_id": {
            "type": "string",
            "format": "uuid"
        },
        "event_version": {
            "type": "string"
        },
        "event_name": {
            "type": "string"
        },
        "event_time": {
            "type": "string",
            "format": "date-time"
        },
        "producer": {
            "type": "string"
        },
        "data": {
            "type": "object",
            "properties": {
                "publicId": {
                    "type": "string"
                },
                "assigneePublicId": {
                    "type": "string"
                }
            },
            "required": [
                "publicId",
                "assigneePublicId"
            ]
        }
    },
    "required": [
        "event_id",
        "event_version",
        "event_name",
        "event_time",
        "producer",
        "data"
    ]
}
